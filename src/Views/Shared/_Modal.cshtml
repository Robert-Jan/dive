<template x-teleport="#modal">
    <div class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true"
        x-show='@ViewData["ModalStateName"]' x-trap='@ViewData["ModalStateName"]' x-cloak>
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
        <div class="fixed z-10 inset-0 overflow-y-auto">
            <div class="flex items-center justify-center min-h-full p-4 text-center sm:p-0">
                <div
                    class="relative bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 max-w-lg w-full">
                    <form action='@ViewData["ModalFormAction"]' method="post" x-data="form" x-on:focusout="change"
                        x-on:input="change" x-on:submit="submit">
                        @Html.AntiForgeryToken()
                        <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                            @RenderBody()
                        </div>
                        <div class="bg-gray-50 px-4 py-3 sm:px-6 flex flex-row-reverse">
                            <button type="submit"
                                class="w-auto text-sm ml-3 inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-700">@ViewData["ModalButton"]</button>
                            <button type="button" x-on:click='@ViewData["ModalStateName"] = false'
                                class="w-auto text-sm inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</template>