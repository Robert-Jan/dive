<div class="absolute flex flex-col gap-6 p-3 sm:p-10 z-10 bottom-0 right-0">
    @foreach (var notification in ViewBag.Notifications)
    {
        <div class="flex w-full sm:w-96 p-4 rounded-lg border border-gray-200 bg-white drop-shadow-lg" x-cloak
        x-data="{show: false}" x-show="show"
        x-init="setTimeout(function() { show = true }, 100); setTimeout(function() { show = false }, 5000)"
        x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 scale-90"
        x-transition:enter-end="opacity-100 scale-100" x-transition:leave="transition ease-in duration-300"
        x-transition:leave-start="opacity-100 scale-100" x-transition:leave-end="opacity-0 scale-90">
            @if (@notification.Split("::")[0] == "success")
            {
                <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-full bg-green-100">
                    <svg class="h-6 w-6 text-green-600" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
                viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            }
            else
            {
                <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 rounded-full bg-red-100">
                    <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                stroke-width="2" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
            }

            <div class="w-full px-4">
                @notification.Split("::")[1]
                <p class="text-sm text-gray-400">
                    @notification.Split("::")[2]
                </p>
            </div>

            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-gray-400 cursor-pointer" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6"
                fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" x-on:click="show = false">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </div>
        </div>
    }
</div>