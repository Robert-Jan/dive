@{
    Layout = "_EmptyLayout";
    ViewData["Title"] = "Register";
}
<div class="w-full min-h-screen flex">
    <div class="flex items-center justify-center w-full sm:w-1/3">
        <div class="max-w-md w-full">
            <div>
                <svg class="mx-auto h-24 w-auto text-indigo-600" xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 56.998 56.998" fill="currentColor" stroke="none">
                    <path
                        d="M29.577 23.645l.393 6.242-4.116.26-.394-6.242 4.117-.26zm27.203 5.487c-2.105.217-3.576-2.611-3.576-7.678-1.736-1.567-9.93 6.998-9.93 6.998l.053.114c-1.854 1.298-3.744 2.539-5.633 3.781.945-2.646 1.854-5.31 2.645-8.012.023-.085.043-.167.059-.249l6.971-6.285c-4.646-1.889-2.869-4.509-7.938-6.621-1.513.453-3.106 9.394-3.433 11.299a2.582 2.582 0 00-.254.588c-.863 2.961-1.875 5.871-2.914 8.771-6.845-2.015-14.03-.954-20.877.779-3.567.903-3.578 5.048-1.507 6.978.266.463.739.817 1.46.942 4.128.714 7.784 2.435 11.189 4.847 2.515 1.778 4.894-2.354 2.405-4.117a35.431 35.431 0 00-3.673-2.27c3.534-.334 7.06-.098 10.574 1.225 1.531.574 3.226-.172 4.222-1.398 3.272-2.29 6.688-4.375 9.937-6.706a2.6 2.6 0 00.235-.192c3.618-.917 11.624-2.963 9.985-2.794zM6.082 34.718c1.784-3.654 3.775-3.646 6.487-3.64 1.178.005 2.5.01 3.892-.332l8.643-.546-.394-6.244-11.19.706a3.128 3.128 0 00-2.594 4.534c-2.443.133-4.85.904-6.763 5.123a4.253 4.253 0 00-3.917 2.884 4.238 4.238 0 00.333 3.468L0 42.38l4.03 1.367.312-.923c.179-.003.356-.017.532-.042.622.55 1.567.566 2.204.003a1.66 1.66 0 00.526-1.565c.298-.373.541-.802.704-1.281a4.256 4.256 0 00-2.226-5.221z" />
                </svg>
                <h2 class="mt-6 text-center text-3xl leading-9 font-extrabold text-gray-900">
                    Create your Dive account
                </h2>
                <div class="mt-2 text-sm text-center leading-5">
                    <a href="/login"
                        class="font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:underline transition ease-in-out duration-150">
                        I already have a account
                    </a>
                </div>
            </div>
            <form class="mt-8" action="/register" method="post">
                @Html.AntiForgeryToken()
                <div class="flex flex-col space-y-4">
                    <div>
                        <label class="mb-1 block text-sm font-medium text-gray-700" for="email">Email address</label>
                        <input aria-label="Email address" id="email" name="email" type="email" required
                            class="w-full px-3 py-2 border border-gray-300 text-gray-900 rounded-md focus:outline-none focus:shadow-outline-indigo focus:border-indigo-300 focus:z-10 sm:text-sm sm:leading-5">
                    </div>

                    <div class="flex space-x-2">
                        <div>
                            <label class="mb-1 block text-sm font-medium text-gray-700"
                                for="first_name">Firstname</label>
                            <input aria-label="Firstname" id="first_name" name="first_name" type="text" required
                                class="w-full px-3 py-2 border border-gray-300 text-gray-900 rounded-md focus:outline-none focus:shadow-outline-indigo focus:border-indigo-300 sm:text-sm sm:leading-5">
                        </div>
                        <div>
                            <label class="mb-1 block text-sm font-medium text-gray-700" for="last_name">Lastname</label>
                            <input aria-label="Lastname" id="last_name" name="last_name" type="text" required
                                class="w-full px-3 py-2 border border-gray-300 text-gray-900 rounded-md focus:outline-none focus:shadow-outline-indigo focus:border-indigo-300 sm:text-sm sm:leading-5">
                        </div>
                    </div>

                    <div>
                        <label class="mb-1 block text-sm font-medium text-gray-700" for="username">Username</label>
                        <input aria-label="Username" id="username" name="username" type="text" required
                            class="w-full px-3 py-2 border border-gray-300 text-gray-900 rounded-md focus:outline-none focus:shadow-outline-indigo focus:border-indigo-300 sm:text-sm sm:leading-5">
                    </div>

                    <div x-data="{ open: false }">
                        <label class="mb-1 block text-sm font-medium text-gray-700" for="password">Password</label>
                        <div class="mt-1 flex rounded-md shadow-sm">
                            <span x-on:click="open = ! open"
                                class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm font-black cursor-pointer">
                                ? </span>
                            <input type="password" name="password" id="password"
                                class="focus:border-indigo-300 text-gray-900 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300">
                        </div>
                        <ul role="list" class="mt-2 pl-4 list-disc text-sm space-y-1" x-show="open" x-cloak>
                            <li class="text-gray-400">
                                <span class="text-gray-600">Minimal 6 characters long</span>
                            </li>
                            <li class="text-gray-400">
                                <span class="text-gray-600">Minimal 1 digit required</span>
                            </li>
                            <li class="text-gray-400">
                                <span class="text-gray-600">Minimal 1 lowercase character required</span>
                            </li>
                            <li class="text-gray-400">
                                <span class="text-gray-600">Minimal 1 uppercase character required</span>
                            </li>
                            <li class="text-gray-400">
                                <span class="text-gray-600">Minimal 1 non-alphanumeric character required</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="mt-6">
                    <button type="submit"
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
                        Register
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div class="hidden sm:block w-2/3 bg-cover bg-center" style="background-image: url('/images/diver.jpg');"></div>
</div>
